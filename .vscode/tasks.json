{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && cmake -DCMAKE_BUILD_TYPE=Debug ../ && make -j4",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build Project Release",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && cmake -DCMAKE_BUILD_TYPE=Release ../ && make -j4",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Application",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && ./TGF_Propa",
            "group": "test",
            "problemMatcher": [],
            "dependsOn": "Build Project"
        }
    ]
}
